{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@crancha/shell": ["libs/shell/src/index.ts"],
      "@crancha/public": ["libs/public/src/index.ts"],
      "@crancha/domain": ["libs/domain/src/index.ts"],
      "@crancha/feature-path-upload": ["libs/feature-path-upload/src/index.ts"],
      "@crancha/ui": ["libs/ui/src/index.ts"],
      "@crancha/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
